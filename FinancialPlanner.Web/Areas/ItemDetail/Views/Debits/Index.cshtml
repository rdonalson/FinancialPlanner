@using FinancialPlanner.Data.Entity
@model IEnumerable<Debit>

@{
    ViewBag.Title = "Index";
}

<h4>Debit</h4>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Period.Name)
        </th>
    </tr>
    @foreach (Debit item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.PkDebit})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount, "_Currency")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Period.Name)
            </td>
        </tr>
    }
</table>

