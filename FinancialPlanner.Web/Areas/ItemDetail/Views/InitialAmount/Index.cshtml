@using FinancialPlanner.Data.Entity
@model IEnumerable<InitialAmount>

@{
    ViewBag.Title = "Index";
    var exists = bool.Parse(ViewData["Exists"].ToString());
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    @if (!exists)
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
    <table class="table">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeginDate)
            </th>
        </tr>
    
    @foreach (InitialAmount item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PkID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount, "_Currency")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginDate, "_Date")
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
